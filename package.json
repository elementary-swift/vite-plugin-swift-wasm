{
  "name": "@elementary-swift/vite-plugin-swift-wasm",
  "version": "0.1.0",
  "description": "A Vite plugin for Swift WebAssembly integration",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "swift",
    "wasm",
    "webassembly"
  ],
  "author": "Simon Leeb",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./client": {
      "types": "./utils/client.d.ts"
    }
  },
  "files": [
    "dist",
    "utils"
  ],
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "picocolors": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "prettier": "^3.7.4",
    "tsdown": "~0.18.0",
    "typescript": "^5.9.3",
    "vite": "^7.0.0"
  },
  "peerDependencies": {
    "vite": "^7.0.0 || ^8.0.0"
  }
}
